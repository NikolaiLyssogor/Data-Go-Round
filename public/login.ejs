<%- include("./partials/header")%>

<link rel="stylesheet" type="text/css" href="css/login.css">
<div class="container">

    <!-- Centered card on page -->
    <div class="w-25 card" id="loginCard">
        <img class="card-img-top" src="./css/logo2.svg">
        <div class="card-body">
            <!-- Login form content -->
            <form action="/login" method="POST">
                <div class="form-group" id="emailGroup">
                    <input name="email" type="username" class="form-control" placeholder="Email" required autofocus>
                </div>
                <div class="form-group" id="passwordGroup">
                    <input name="password" type="password" class="form-control" placeholder="Password" required>
                </div>
                <div style="color:red">
                    <p><% if(messages.error) { %><%= messages.error %><% } %></p>
                </div>
                <div class="form-group" id="submitGroup">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>
            <hr>

            <!-- Sign-up link -->
            <p>Don't have an account? <a href="/register" type="button">Sign
                    up.</a></p>
        </div>
    </div>
</div>
</div>

<%- include("./partials/footer")%>