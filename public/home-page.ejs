                <!-- Page content -->
        <div class="main" style="margin-left: 5%; margin-right: 5%; padding-top:2%" >
          <% if (surveys) {            
            <!-- for all surveys -->
            surveys.forEach(function(item){ 
              var survey_item = '';
              var survey_item2 = '';
